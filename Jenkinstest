pipeline {
  agent any
  stages {
    stage('checkout Code') {
      steps {
        git branch: 'main', url:'https://github.com/venkat-git-v/citest.git'
      }
    }
    stage('Build') {
      steps {
        echo 'Building.. ,,.'
        // Commands to build your app, e.g., sh 'make build'
      }
    }
    stage('Test') {
      steps {
        echo 'Testing...'
        // Commands to run tests, e.g., sh 'make test'
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying...'
        // Deployment commands, e.g., sh 'make deploy'
      }
    }
  }
post{
   success{
  bat 'echo "build successful"'
}
failure{
   bat 'echo "build failed"'
}
}
}
